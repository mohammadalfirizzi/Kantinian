<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/pengaturanlimit"
                android:layout_margin="20dp"
                android:background="@drawable/kembali"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_alignTop="@+id/pengaturanlimit"
                android:layout_toEndOf="@+id/pengaturanlimit"
                android:text="Limit Transaksi"
                android:textSize="16sp"
                android:textColor="#F00"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/logolim"
                android:layout_below="@id/pengaturanlimit"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logolim"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/limitharga"
                android:layout_below="@id/logolim"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Rp. 20.000,-"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limit Transaksi saat ini"
                android:textColor="@color/merahh"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/limittransaksi"
                android:layout_below="@id/limitharga"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/limittransaksisiswa"
                android:text="* Limit transaksi siswa per hari"
                android:layout_below="@id/limittransaksi"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/limittransaksisiswa"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:id="@+id/erpe"
                android:background="@drawable/rp"/>
            <EditText
                android:id="@+id/angka"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/erpe"
                android:layout_alignBottom="@id/erpe"
                android:background="#eee"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@id/erpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/erpe"
                    android:layout_below="@+id/erpe"
                    android:text="10.000"
                    android:background="@drawable/custom_button"
                    android:id="@+id/button2" />
                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button2"
                    android:layout_alignBottom="@+id/button2"
                    android:layout_alignStart="@+id/logolim"
                    android:background="@drawable/custom_button"
                    android:text="20.000" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/button3"
                    android:layout_toEndOf="@+id/limittransaksisiswa"
                    android:background="@drawable/custom_button"
                    android:text="25.000" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/button2"
                    android:layout_below="@+id/button2"
                    android:background="@drawable/custom_button"
                    android:text="50.000" />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/ll1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/syaratdanketentuan"
                    android:text="Syarat dan Ketentuan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/syaratdua"
                    android:text="Dana ID (nomor ponsel) Anda hanya dapat diganti 90 hari. Nomor yang sebelumnya yang telah anda tidak gunakan untuk ganti DANA ID dari nomot lain
Berikut cara mengganti nomor ponsel anda:"        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/syarattiga"
                    android:text="1. Masuk Aplikasi DANA, pilih menu ''Saya''"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/syaratempat"
                    android:text="2. Pilih 'Pengaturan'"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/syaratlima"
                    android:text="3. Pilih No. Ponsel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Tap 'Ganti'"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Silakan pilih metode verifikasi yang Anda inginkan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Kirim kode OTP ke nomor lama"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idcuz"
                android:text="id_customer"
                android:layout_below="@+id/ll"/>
            <Button
                android:id="@+id/bntsimpan"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:text="Simpan Perubahan"
                android:textColor="@color/putih"
                android:layout_below="@id/idcuz"
                android:background="@drawable/custom_buttonhijau"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
