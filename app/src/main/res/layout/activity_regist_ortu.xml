<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logob"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/txt_hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/putih"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/gmbrkantiniannb"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/kantianid"
                android:layout_below="@+id/logob"
                android:layout_centerHorizontal="true" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
                android:layout_below="@+id/gmbrkantiniannb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif-monospace"
                        android:text="Data Orang Tua"
                        android:textColor="#000"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/nohp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:inputType="numberDecimal"
                        android:hint="Masukkan No HP Anda" />

                    <EditText
                        android:inputType="textEmailAddress"
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Masukkan Email Anda" />



                    <EditText
                        android:inputType="numberPassword"
                        android:id="@+id/passwordortu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Masukkan Password Anda" />

                    <EditText
                        android:inputType="numberPassword"
                        android:id="@+id/passwordortu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Masukkan Password Anda Lagi" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/lanjutt"
                android:text="Lanjut"
                android:textColor="@color/putih"
                android:background="@drawable/custom_button_login"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>