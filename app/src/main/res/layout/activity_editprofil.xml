<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editprofil">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pengaturaneditprofile"
        android:layout_margin="20dp"
        android:background="@drawable/kembali"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_alignTop="@+id/pengaturaneditprofile"
        android:layout_toEndOf="@+id/pengaturaneditprofile"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:textColor="#F00"/>



    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pengaturaneditprofile"
        android:background="@drawable/edit_edit_text"
        android:hint="Masukkan Email Baru"
        android:drawableLeft="@drawable/custom_change_email"
        android:inputType="textEmailAddress"
        android:id="@+id/email"/>


    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:background="@drawable/edit_edit_text"
        android:hint="Masukkan Nomor Telepon Baru"
        android:drawableLeft="@drawable/telepon"
        android:inputType="numberDecimal"
        android:id="@+id/telepon"/>


    <EditText

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/telepon"
        android:background="@drawable/edit_edit_text"
        android:hint="Masukkan Alternatif Telepon"
        android:drawableLeft="@drawable/telepon"
        android:inputType="numberDecimal"
        android:id="@+id/teleponrumah"/>

    <Button
        android:id="@+id/simpana"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Simpan Perubahaan"
        android:textColor="@color/putih"
        android:background="@drawable/custom_button_edit" />

    <TextView
        android:layout_below="@+id/teleponrumah"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpasswordlogin"
        android:text="password_login"/>
    <TextView
        android:layout_below="@+id/textpasswordlogin"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textidlogin"
        android:text="id_login"/>

</RelativeLayout>