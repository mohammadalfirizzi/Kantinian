<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transferdua">
    <ImageButton
        android:id="@+id/pengaturantrfd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/kembali" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pengaturantrfd"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/pengaturantrfd"
        android:text="Bayar"
        android:textColor="#F00"
        android:textSize="16sp"
        android:id="@+id/textView" />
    <Button
        android:layout_marginLeft="100dp"
        android:layout_width="30dp"
        android:text="1"
        android:textColor="@color/putih"
        android:layout_height="30dp"
        android:id="@+id/satu"
        android:background="@drawable/custom_lingkarandua"
        android:layout_below="@id/pengaturantrfd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfkata"
        android:text="Transfer Bank"
        android:layout_below="@id/pengaturantrfd"
        android:layout_toEndOf="@id/satu"
        android:layout_margin="5dp"
        android:textColor="#fbddde"/>
    <Button
        android:layout_marginLeft="5dp"
        android:layout_width="30dp"
        android:text="2"
        android:textColor="@color/putih"
        android:layout_height="30dp"
        android:id="@+id/dua"
        android:layout_toEndOf="@id/tfkata"
        android:background="@drawable/custom_lingkaran"
        android:layout_below="@id/pengaturantrfd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfkataa"
        android:text="Bayar"
        android:layout_below="@id/pengaturantrfd"
        android:layout_toEndOf="@id/dua"
        android:layout_margin="5dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/rinciantopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/satu"
        android:layout_margin="20dp"
        android:text="Rincian Top Up"
        android:textColor="#000"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rinciantopup">

        <TextView
            android:id="@+id/nominaltopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Nominal Top Up"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hasilnominaltopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Rp.100.000,-"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1">

        <TextView
            android:id="@+id/kodeunik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Kode Unik"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hasilkodeunik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="284"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2">

        <TextView
            android:id="@+id/biayaadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Biaya Admin"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hasilbiayaadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Rp1.000"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear3">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Total"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hasiltotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Rp.101.284,-"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/linear4"
        android:layout_margin="20dp"
        android:background="#FFE8E8E8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idtopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ID Top Up"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hasilid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="21039323113"
            android:textAlignment="viewEnd"
            android:textColor="@color/merahh"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear5"
        android:layout_margin="20dp"
        android:checked="false"
        android:text="Dengan ini anda setuju dengan semua syarat dan ketentuan berlaku" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checks"
        android:text="id_customer"
        android:id="@+id/id_cuss"/>
    <Button
        android:clickable="false"
        android:id="@+id/bayarsekarang"
        android:layout_centerHorizontal="true"
        android:background="#FF18B732"
        android:textColor="@color/putih"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_cuss"
        android:text="Bayar Sekarang" />


</RelativeLayout>