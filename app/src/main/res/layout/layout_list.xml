<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#d3d3d3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/texttopup"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/merahh"
            android:text="ID TOP UP 2103923113"/>
        <TextView
            android:id="@+id/textuang"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:text="Rp 100.000,-"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="40dp"
        app:cardBackgroundColor="#e9e9e9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mandiri"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/mandiri" />

            <TextView
                android:id="@+id/trftext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/mandiri"
                android:text="Transfer Via Bank"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/mandiri"
                android:layout_below="@+id/mandiri"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_buttonmerah"
                android:text="Menunggu Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/putih"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/waktutersisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button6"
                android:layout_alignBottom="@+id/button6"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="10dp"
                android:text="Waktu Tersisa 12:12:00"
                android:textColor="@color/merahh"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/waktutersisa"
                android:layout_below="@+id/button6"
                android:text="2019-11-18"
                android:textSize="10sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
